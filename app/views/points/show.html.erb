<%= render 'shared/navbar' %>
<div class="container">
  <%= cl_image_tag @point.photo %>
  <h1><%= @point.name %></h1>
  <h3><%= @point.category  %></h3>
  <p><%= @point.description %></p>

  <p>Created by: <%= link_to "#{@point.user.first_name} #{@point.user.last_name}", user_path(@point.user_id)%></p>
  <%= link_to "New post", new_point_post_path(@point)  %>
  <% @posts.each do |post| %>
  <h5><%= post.title %></h5>
  <p><%= post.content %></p>
<p>Created by: <%= link_to "#{post.user.first_name} #{post.user.last_name}", user_path(post.user_id)%></
  <% post.photos.each do |photo| %>
    <%= cl_image_tag photo.image.url(:thumbnail), width: 250, height: 250 %>
  <% end %>
<% end %>

</div>
