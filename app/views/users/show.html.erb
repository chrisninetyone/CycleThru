<div class="banner" >
  <div class="container">
    <div class="profile-card">
      <div class="profile-avatar">
        <div>
       <% avatar_url = @user.facebook_picture_url || "http://placehold.it/30x30" %>
          <%= image_tag avatar_url, class: "rounded-circle user-profile-avatar" %>
        </div>
      </div>
      <div>
        <h3><%= @user.first_name %></h3>
        <p><%= @user.country %></p>
      </div>
    </div>
    <div class="about-section">
      <div class="about-title">
        <div class="d-flex">
          <% if current_user == @user %>
          <%= link_to "", edit_user_registration_path, class: "fas fa-edit mr-1" %>
          <% end %>
          <% if current_user == @user %>
          <h6><%= "My Profile" %></h6>
          <% else %>
          <h6>About <%= "#{@user.first_name}" %></h6>
          <% end %>
        </div>
        <div class="stats-section">
          <div class="row">
             <div class="stats-block">
                <p><strong>Total kilo</strong></p>
                  <p>789km</p>
                <div class="stats-card ml-2">
                <i class="fas fa-road"></i>
             </div>
            </div>
            <div class="stats-block">
                <p><strong>Hours ridden</strong></p>
                <p>50hrs</p>
              <div class="stats-card">
                <i class="fas fa-stopwatch"></i>
              </div>
            </div>
            <div class="stats-block">
                <p><strong>Longest ride</strong></p>
                <p>90km</p>
              <div class="stats-card">
                <i class="fas fa-road"></i>
              </div>
            </div>
          </div>
          <div class="rider-bio">
