<nav class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>
  <% if user_signed_in? %>
  <div class="dropdown">
    <li class="nav-item dropdown mr-2">
      <% avatar_url = current_user.facebook_picture_url || "#{current_user.avatar}" %>
      <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': true %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "My Profile", user_path(current_user[:id]), class: "dropdown-item" %>
        <%= link_to "Edit Account", edit_user_registration_path, class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </li>
  </div>
  <% else %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li>
        <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-facebook btn btn-lg btn-block mr-2" do %>
        <i class="fab fa-facebook-f"></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to "Log in", user_session_path, class: 'btn btn-large btn-dark mr-2' %>
      </li>
      <li>
        <%= link_to "Sign-up", new_user_registration_path, class: 'btn btn-large btn-dark mr-2' %>
      </li>
      <% end %>
    </ul>
  </div>
</nav>


<header class="bg-img header">
  <div class="container">
    <div class="row">
      <div class="intro-box">
        <div class="intro">
          <h1 class="mt-2">Cycle Thru</h1>
          <div class="search-form">
              <div class="p-3 rounded">
                <%= link_to "Let's ride...", points_path, class: "btn btn-large btn-outline-secondary"  %>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<%= render 'shared/footer' %>

